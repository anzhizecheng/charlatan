# This file is for unifying the coding style for different editors and IDEs
# editorconfig.org

root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 4

[*.go]
indent_style = tab

[*.{css,scss}]
indent_size = 2

[{Makefile,**.mk,Makefile.in}]
indent_style = tab

